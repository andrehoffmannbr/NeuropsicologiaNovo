{
  "name": "Sistema de Neuropsicologia",
  "short_name": "NeuroPsico",
  "description": "Sistema completo de gestão para clínicas de neuropsicologia",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#007bff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "dir": "ltr",
  "categories": ["medical", "productivity", "business"],
  "icons": [
    {
      "src": "/public/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/public/favicon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/public/favicon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/public/img/logosistema.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide",
      "label": "Dashboard Principal"
    },
    {
      "src": "/public/img/logologin.jpg",
      "sizes": "750x1334",
      "type": "image/jpeg",
      "platform": "narrow",
      "label": "Tela de Login"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Acesso rápido ao dashboard",
      "url": "/#/dashboard",
      "icons": [
        {
          "src": "/public/favicon.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Clientes",
      "short_name": "Clientes",
      "description": "Gerenciar clientes",
      "url": "/#/clientes",
      "icons": [
        {
          "src": "/public/favicon.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Agendamentos",
      "short_name": "Agenda",
      "description": "Visualizar agendamentos",
      "url": "/#/agendamentos",
      "icons": [
        {
          "src": "/public/favicon.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Novo Cliente",
      "short_name": "Novo Cliente",
      "description": "Cadastrar novo cliente",
      "url": "/#/clientes?action=new",
      "icons": [
        {
          "src": "/public/favicon.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/#/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/#/contact?email=%s"
    },
    {
      "protocol": "tel",
      "url": "/#/contact?phone=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/#/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xlsx", ".xls"]
      }
    }
  ]
} 